    "version": "0.2.0",
    "configurations": [
        {
            "name": "client",
            "type": "gdb",
            "request": "launch",
            "target": "/usr/bin/lsusb",
            "env": {
                "LD_PRELOAD": "${workspaceRoot}/build/libusb-1.0.so"
            },
            "cwd": "${workspaceRoot}",
            "valuesFormatting": "parseText"
        },
        {
            "name": "server",
            "type": "gdb",
            "request": "launch",
            "target": "${workspaceRoot}/build/libusb_proxy_server",
            "cwd": "${workspaceRoot}",
            "valuesFormatting": "parseText"
        }
    ]
}